<%- include("../partials/head") %>

    <head>
        <title>ChapultePets - Login</title>
    </head>

    <body class="login">
        <!-- Codificación de la cabecera -->

        <!-- Configuración del main -->
        <main class="login">
            <form class="formulario" method="POST" action="/users/login" enctype="multipart/form-data">
                <div class="logo-container">
                    <a href="/">
                        <img src="/img/logo_mobile.png" alt="" class="main-logo">
                    </a>
                </div>

                <p>
                    <input type="text" name="nombreUsuario" id="" placeholder="Nombre de Usuario" class="nombre"
                        style="width: 100%;" required>
                    <% if (locals.errors && errors.nombreUsuario) { %>
                        <p class="errorMessage"><%= errors.nombreUsuario.msg %> </p>
                    <% } %>
                </p>

                <p>
                    <input type="password" name="password" id="" class="contraseña" placeholder="Contraseña"
                        style="width: 100%;" required>
                    <% if (locals.errors && errors.password) { %>
                        <p class="errorMessage"><%= errors.password.msg %> </p>
                    <% } %>
                </p>

                <p class="contra">
                    <A href=/#>¿Olvidaste la contraseña?</A>
                </p>

                <p>
                    <button type="submit" class="" style="width: 100%;">Iniciar Sesión</button>
                </p>
            </form>

            <div class="reg">
                <p>¿Eres nuevo?</p>
                <p><A href=/register>Crear nueva cuenta</A></p>
            </div>
        </main>

        <!-- Configuración del Pie de página -->
        <footer class="for">
            <%- include("../partials/footerFormularioUsuario") %>
        </footer>
    </body>

    </html>