<%- include("../partials/head") %>

    <head>
        <title>ChapultePets - Registrar Producto</title>
    </head>

    <body class="crear">

        <!-- Configuración del main -->
        <main class="crear">
            <form action="/products/create" method="POST" enctype="multipart/form-data">
                <div class="logo-container">
                    <a href="/">
                        <img src="/img/logo_mobile.png" alt="" class="main-logo">
                    </a>
                </div>
                <p class="mensaje">Registro de un nuevo producto</p>
                <p>
                    <input 
                    type="text" 
                    name="name" 
                    placeholder="Nombre del Artículo" 
                    class="nombreArt <%=(locals.errors && errors.name) ? "caja-error" : "" %>"
                    style="width: 100%;"
                    value="<%= locals.old && old.name ? old.name : ""; %>">

                    <% if (locals.errors && errors.name) { %>
                        <p class="errorMessage"><%= errors.name.msg %> </p>                 
                    <% } %>
                </p>

                <p>
                    <input 
                    type="text" 
                    name="category" 
                    placeholder="Categorías del artículo. Ej. Alimento, Juguete" 
                    class="categoriaArt <%=(locals.errors && errors.category) ? "caja-error" : "" %>"
                    style="width: 100%;"
                    value="<%= locals.old && old.category ? old.category : ""; %>"
                    >
                    <% if (locals.errors && errors.category) { %>
                        <p class="errorMessage"><%= errors.category.msg %> </p>                 
                    <% } %>
                </p>

                <p>
                    <input 
                    type="text" 
                    name="brand" 
                    placeholder="Marca del artículo" 
                    class="categoriaArt <%=(locals.errors && errors.brand) ? "caja-error" : "" %>"
                    style="width: 100%;"
                    value="<%= locals.old && old.brand ? old.brand : ""; %>">
                    <% if (locals.errors && errors.brand) { %>
                        <p class="errorMessage"><%= errors.brand.msg %> </p>                 
                    <% } %>
                </p>

                <p>
                    <input 
                    type="number" 
                    name="price" 
                    min="0"
                    step="0.01"
                    placeholder="Precio en pesos mexicanos"
                    class="precio <%=(locals.errors && errors.price) ? "caja-error" : "" %>" 
                    style="width: 100%;"
                    value="<%= locals.old && old.price ? old.price : ""; %>">
                    <% if (locals.errors && errors.price) { %>
                        <p class="errorMessage"><%= errors.price.msg %> </p>                 
                    <% } %>
                </p>
                
                <!-- <p>
                    <input type="text" name="idArticulo" id="" placeholder="Ingrese nuevo ID" class="ID"
                        style="width: 100%;" required>
                </p> -->

                <!-- <label for="CategoriaAnimal">Categoría Animal:</label>
                <select name="CategoriaAnimal" style="width: 100%;">
                    <option value="perro">Perro</option>
                    <option value="gato">Gato</option>
                    <option value="ave">Ave</option>
                    <option value="roedor">Roedor</option>
                    <option value="reptil">Reptil</option>
                </select>

                <label for="CategoriaTamaño">Tamaño:</label>
                <select name="CategoriaTamaño" id="" style="width: 100%;">
                    <option value="pequeño">Pequeño</option>
                    <option value="mediano">Mediano</option>
                    <option value="grande">Grande</option>
                </select> -->


                <p class="foto">
                    <label>Foto del artículo: </label>
                    <input 
                    type="file" 
                    name="avatar" 
                    accept=".jpg" 
                    multiple 
                    placeholder="Foto" 
                    style="width: 100%;"
                    >
                    <% if (locals.errors && errors.avatar) { %>
                        <p class="errorMessage"><%= errors.avatar.msg %> </p>                 
                    <% } %>

                </p>

                <p>
                    <textarea 
                    name="description" 
                    placeholder="Descripción" 
                    class="<%=(locals.errors && errors.description) ? "caja-error" : "" %>" 
                    style="width: 100%;"
                    ><%= locals.old && old.description ? old.description : ""; %></textarea>
                    <% if (locals.errors && errors.description) { %>
                        <p class="errorMessage"><%= errors.description.msg %> </p>                 
                    <% } %>
                </p>

                <p>
                    <button type="submit" class="" style="width: 100%;">Subir producto</button>
                </p>
            </form>
        </main>
        <!-- Configuración del Pie de página -->
        <%- include("../partials/footerFormularioAdmin") %>
    </body>

    </html>