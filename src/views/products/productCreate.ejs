<%- include("../partials/head") %>

    <head>
        <title>ChapultePets - Registrar Producto</title>
    </head>

    <body class="crear">

        <!-- Configuración del main -->
        <main class="crear">
            <form action="/products/create" method="POST" enctype="multipart/form-data">
                <div class="logo-container">
                    <a href="/">
                        <img src="/img/logo_mobile.png" alt="" class="main-logo">
                    </a>
                </div>
                <p class="mensaje">Registro de un nuevo producto</p>
                <p>
                    <input type="text" name="name" id="" placeholder="Nombre del Artículo" class="nombreArt"
                        style="width: 100%;" required>
                </p>

                <!-- <p>
                    <input type="text" name="idArticulo" id="" placeholder="Ingrese nuevo ID" class="ID"
                        style="width: 100%;" required>
                </p> -->

                <p>
                    <input 
                    type="text" 
                    name="category" 
                    placeholder="Categoría del artículo" 
                    class="categoriaArt"
                    style="width: 100%;" 
                    required>
                </p>

                <p>
                    <input 
                    type="text" 
                    name="brand" 
                    placeholder="Marca del artículo" 
                    class="categoriaArt"
                    style="width: 100%;" 
                    required>
                </p>

                <p>
                    <input 
                    type="number" 
                    name="price" 
                    min="0"
                    step="0.01"
                    placeholder="Precio en pesos mexicanos"
                    class="precio" style="height: 30px; width: 100%;" 
                    required
                    >
                </p>

                <!-- <label for="CategoriaAnimal">Categoría Animal:</label>
                <select name="CategoriaAnimal" style="width: 100%;">
                    <option value="perro">Perro</option>
                    <option value="gato">Gato</option>
                    <option value="ave">Ave</option>
                    <option value="roedor">Roedor</option>
                    <option value="reptil">Reptil</option>
                </select>

                <label for="CategoriaTamaño">Tamaño:</label>
                <select name="CategoriaTamaño" id="" style="width: 100%;">
                    <option value="pequeño">Pequeño</option>
                    <option value="mediano">Mediano</option>
                    <option value="grande">Grande</option>
                </select> -->


                <p class="foto">
                    <label>Foto del artículo: </label>
                    <input type="file" name="avatar" accept=".jpg" multiple placeholder="Foto" style="width: 100%;"
                        required>
                </p>

                <p>
                    <textarea name="description" id="" placeholder="Descripción" class="" style="width: 100%;"
                        required></textarea>
                </p>

                <p>
                    <button type="submit" class="" style="width: 100%;">Subir producto</button>
                </p>
            </form>
        </main>
        <!-- Configuración del Pie de página -->
        <%- include("../partials/footerFormularioAdmin") %>
    </body>

    </html>